{
    "extends": [
      "eslint:recommended"
    ],
    "env": {
      "browser": true
    },
    "globals": {
      "Promise": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": true
      }
    },
    "rules": {
      "semi": 2,
      "eqeqeq" : ["error", "always"],
      "no-multi-spaces": 2,
      "space-infix-ops": [
        "error",
        {
          "int32Hint": false
        }
      ],
      "indent": [
        "error",
        2,
        {"SwitchCase" : 1}
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "prefer-const" : "error",
      "no-var": "error",
      "space-before-blocks" : "error",
      "keyword-spacing": "error",
      "no-trailing-spaces": [
        "error", {
          "skipBlankLines": true
        }
      ],
      "no-multiple-empty-lines": "error"
    }
  }
  